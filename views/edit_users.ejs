<%- include('layout/header') %>
<div id="map" style='width: 80%; height: 400px;'></div>

<div class='container'>
 
    
  <div class="row"> 

    <div class="col-lg-6 mx-auto mt-4">
         <div class="card shadow">
            <div class="card-header bg-success">
             <h3 class="text-light">Edit User (<%= article.name %>)</h3>
            </div>
            
            <div class="card-body p-4">
                <form action="/edit/<%= article._id %>" method="post" id="add-form" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="name">Name</label>
                        <input type="text" name="name" class="form-control form-control-lg" 
                        placeholder="Enter name" value="<%= article.name %>"  required />
                    </div>
                   <!-- Campo Category -->
<div class="mb-3">
  <label for="category" class="form-label">Category</label>
  <select name="category" class="form-select form-select-lg">
    <option value="bon" <%= article.category === 'bon' ? 'selected' : '' %>>Content</option>
    <option value="moyen" <%= article.category === 'moyen' ? 'selected' : '' %>>Moyen</option>
    <option value="bas" <%= article.category === 'bas' ? 'selected' : '' %>>Pas content</option>
  </select>
</div>
                 
<!-- Campo Immagine -->
<div class="mb-3">
  <label for="image" class="form-label">Image</label>
  <select name="image" class="form-select form-select-lg">
    <option value="image_1.png" <%= article.image === 'image_1.png' ? 'selected' : '' %>>Image 1</option>
    <option value="image_2.png" <%= article.image === 'image_2.png' ? 'selected' : '' %>>Image 2</option>
    <option value="image_3.png" <%= article.image === 'image_3.png' ? 'selected' : '' %>>Image 3</option>
  </select>

                     
                     <% if (article.image) { %>
                        <img src="/uploads/<%= article.image %>" alt="Current Image" class="img-thumbnail mt-1" width="100">
                      <% } %>
                    </div>
                    
                    <input type="hidden" name="old_image" value="<%= article.image %>" />
                    <div class="mb-3 d-grid">                      
                        <input type="submit" name="submit" value="User" class="btn btn-success btn-lg"  />
                    </div>
                </form>
            </div>
         </div>

    </div>

  </div>

</div>

<%- include('layout/footer') %>