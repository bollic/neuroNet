<%- include('layout/header') %>

<div class="min-h-screen bg-gradient-to-r from-purple-100 via-pink-100 to-blue-100 p-8">

  <h1 class="text-4xl font-bold text-center text-purple-700 mb-10">Mettre à niveau votre groupe</h1>

    <div class="max-w-lg mx-auto">

<% if (typeof session !== "undefined" && session.message) { %>
  <div class="mb-6 p-4 rounded <%= session.message.type === 'success' ? 'bg-green-200 text-green-800' : 'bg-red-200 text-red-800' %>">
    <%= session.message.message %>
  </div>
  <% session.message = null; %>
<% } %>


      <div class="card bg-white shadow-xl p-6 text-center border-2 border-purple-400">
        <h2 class="text-2xl font-bold">Pro</h2>
        <p class="mt-2 text-gray-600">Jusqu’à 50 points pour votre groupe</p>
        <p class="text-3xl font-bold mt-4">€5/mois</p>

        <form action="/upgrade-plan" method="POST">
          <input type="hidden" name="newPlan" value="pro">
          <button class="btn btn-primary mt-6 w-full">
            S’abonner
          </button>
        </form>

      </div>

    </div>


</div>

