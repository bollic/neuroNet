<!-- partials/groupFeed.ejs -->
<div id="group-feed" class="mt-4 space-y-4">

  <h5 class="mb-3 text-purple-700 font-bold flex items-center gap-2">
    <i class="fas fa-comments"></i> Group Feed
  </h5>

  <% if (points && points.length > 0) { %>
    <% points.forEach(p => { %>
      <div class="card shadow-md bg-white p-4 rounded-xl hover:shadow-lg transition">
        <div class="flex justify-between items-center mb-2">
          <div class="flex items-center gap-2">
            <div class="w-10 h-10 rounded-full flex items-center justify-center text-white font-bold
              <%= p.user && p.user.role === 'office' ? 'bg-purple-600' : 'bg-gray-400' %>">
              <%= p.user && p.user.email ? p.user.email[0].toUpperCase() : "?" %>
            </div>
            <div>
              <p class="font-semibold"><%= p.user && p.user.email ? p.user.email : "Utilisateur" %></p>
              <p class="text-xs text-gray-500"><%= new Date(p.createdAt).toLocaleString("it-IT") %></p>
            </div>
          </div>
          <span class="badge badge-outline"><%= p.category || "Senza categoria" %></span>
        </div>

        <div>
          <p class="text-gray-800"><%= p.name %></p>
        </div>
      </div>
    <% }) %>
  <% } else { %>
    <p class="text-gray-500 text-sm">Aucun contenu publié pour l’instant…</p>
  <% } %>
</div>
