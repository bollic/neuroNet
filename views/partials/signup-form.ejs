<!-- partials/signup-form.ejs -->
<% if (role === "field") { %>
    <!-- Messaggio di errore -->
  <% if (error) { %>
    <div class="bg-red-100 text-red-800 p-2 rounded mb-4">
      ‚ö†Ô∏è <%= error %>
    </div>
  <% } %>

  <!-- üß≠ Membre / Field : form d'inscription dans un groupe existant -->
  
<form id="signup-form" action="/signup" method="POST" class="space-y-4">


    <p class="text-sm text-gray-600 mb-2">
      En tant que <strong>membre (Field)</strong>, vous rejoignez un groupe existant.
    </p>

    <!-- Groupe (pr√©-rempli depuis l‚ÄôURL) -->
    <div>
      <label for="group" class="block text-sm font-medium text-gray-700">
        Code du groupe
      </label>
      <input
        type="text"
        id="group"
        name="group"
        value="<%= group || '' %>"
        readonly
        required
        class="input input-bordered w-full mt-1"
      />
    </div>

    <!-- Email -->
    <div>
      <label for="email" class="block text-sm font-medium text-gray-700">
        Email
      </label>
      <input
        type="email"
        name="email"
        id="email"
        required
        class="input input-bordered w-full mt-1"
      />
    </div>

    <!-- Password -->
    <div>
      <label for="password" class="block text-sm font-medium text-gray-700">
        Mot de passe
      </label>
      <input
        type="password"
        name="password"
        id="password"
        required
        class="input input-bordered w-full mt-1"
      />
    </div>

    <!-- R√¥le cach√© -->
    <input type="hidden" name="role" value="field">

    <!-- Bouton -->
    <button type="submit" class="btn btn-primary w-full mt-2">
      üöÄ Rejoindre le groupe
    </button>
  </form>
<% } else if (role === "office") { %>
  <!-- üè¢ Office : form de cr√©ation de groupe -->
