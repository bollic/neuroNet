<div class="bg-base-100 rounded-lg shadow-md p-4 mb-4">
  <h2 class="text-lg font-bold mb-3 flex items-center gap-2">
    <i class="fas fa-user-circle text-primary"></i> Profil
  </h2>

  <p><strong>Email:</strong> <%= user.email %></p>

  <p>
  <strong>XP Points:</strong>
  <span class="badge badge-primary"><%= pointsXp || 0 %></span>
</p>

  <p>
    <strong>XP Parcelles:</strong>
    <span class="badge badge-secondary"><%= parcelleXp || 0 %></span>
  </p>
  <p>
    <strong>XP Total:</strong>
    <span class="badge badge-primary"><%= PointsUsed || 0 %></span>
  </p>

  <!-- ðŸŸ¦ PROGRESS BAR -->
  <div class="mt-3">
    <progress
      class="progress progress-primary w-full"
     value="<%= planUX.used %>"
  max="<%= planUX.limit %>">
    </progress>

    <p class="text-xs text-center mt-1">
    <%= planUX.used %> / <%= planUX.limit %> XP
    </p>
  </div>

  <p class="mt-3"><strong>Badges:</strong></p>
  <% if (user.badges && user.badges.length > 0) { %>
    <% user.badges.forEach(b => { %>
      <span class="badge badge-accent mr-1 mb-1"><%= b.name || b.code %></span>
    <% }) %>
  <% } else { %>
    <span class="text-gray-500">â€”</span>
  <% } %>
</div>
